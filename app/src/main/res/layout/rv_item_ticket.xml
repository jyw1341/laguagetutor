<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/layout_border_bottom"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_ticket"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/basic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tv_ticket_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/btn_ticket_buy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cv_ticket"
        app:layout_constraintTop_toTopOf="@+id/cv_ticket" />

    <TextView
        android:id="@+id/tv_ticket_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/btn_ticket_buy"
        app:layout_constraintStart_toEndOf="@+id/cv_ticket"
        app:layout_constraintTop_toBottomOf="@+id/tv_ticket_name" />

    <TextView
        android:id="@+id/tv_ticket_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/cv_ticket"
        app:layout_constraintEnd_toStartOf="@+id/btn_ticket_buy"
        app:layout_constraintStart_toEndOf="@+id/cv_ticket" />

    <Button
        android:id="@+id/btn_ticket_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="구매"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442" />

</androidx.constraintlayout.widget.ConstraintLayout>